package by.epam.grodno.trainig.val.gri.se01;

public class SE01a4 {

	public static void main(String[] args) {
		int i=0;
		int j=0;
		int n=100;
		int array [] [];
		array = new int[100] [100];
		
		while (i<=n )
		{
			if (j==i)
			{
				array [i][j]=1;
				System.out.print(" " + array[i][j]);
			}
			
			array [i][j]=0;
			
			System.out.print(" " + array[i][j]);
			
			
			if (i==n)
			{
				System.out.println(""); //перенести строку
				j++;
				i=0;
			}
			if (j==n){
				
				break;
			}
			i++;
		}
	}

}
